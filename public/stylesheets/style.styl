@import url('http://fonts.googleapis.com/css?family=Raleway')
@import url('http://fonts.googleapis.com/css?family=Raleway:400,800,700')
@font-face 
  font-family:'Arca'
  src url('/fonts/Arca-Heavy.ttf')

.row
  &.top
    margin-top 30px
    @media screen and (min-width: 1920px)
      margin 120px auto 0 auto
    @media screen and (max-width: 480px)
      margin 20px auto 0 auto
    &.about
      z-index 1999
      
.row-fluid  
  &.naver    
    margin-top 40px
    @media screen and (min-width: 1920px)
      margin 120px auto 0 auto
    @media screen and (max-width: 480px)
      margin 30px auto 0 auto
      
.col-xs-4
  &.right
    text-align right    
  &.center
    text-align center
    
img
  &.hs
    max-width 80%
    margin 10% 2.5% 5% 2%
    @media screen and (min-width: 1920px)
      max-width 100%
      margin 12% 2.5% 5% 15%
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 50%
      margin 5% 2.5% 0 20%
     @media screen and (max-width: 480px)
      max-width 70%
      margin 12% 2.5% 20% 15%
  &.i
    max-width 100%
    cursor pointer
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 90%
      margin-top 30px
  &.naver
    height 30px
    cursor pointer
  


    
h3
  &.i
    text-align center
    font-family:'Raleway'
    font-weight bold
    margin 100px auto 5px auto    
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 100%
      margin 10px auto 5px auto
      font-size 8px
    @media screen and (max-width: 480px)
      font-size 14px
      margin 50px auto 5px auto
    
    
h4
  &.topper
    font-family:'Raleway'  
    @media screen and (max-height 480px) and (orientation: landscape)
      margin 10% auto 5% auto
      font-size 14px
    @media screen and (max-width: 480px)
      font-size 10px
  &.naver
    font-family:'Raleway'
    @media screen and (max-width: 480px)
      font-size 12px
      height 20px
      margin-top 5px
    
p  
  &.naver
    cursor pointer
    @media screen and (max-width: 480px)
      display inline-block
      font-size 10px
      width 20px
    margin-right 20px
    margin-left 20px
    font-family:'Raleway'
  &.i
    text-align center
    height 30px
    margin-bottom 10px    
    @media screen and (max-width: 480px)
      font-size 12px
      height 40px