//animations

.view-animate.ng-enter, .view-animate.ng-leave  
  display block
  width 100%
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  padding 0

.view-animate
  &.ng-enter
    height 100%
    -webkit-transition all linear 1s
    transition all linear 1s
    opacity 0
    &.ng-enter-active
      opacity 1
  &.ng-leave
    -webkit-transition all linear 1s
    transition all linear 1s
    &.ng-leave-active
      opacity 0
