@import url('http://fonts.googleapis.com/css?family=Raleway')
@import url('http://fonts.googleapis.com/css?family=Raleway:400,800,700')
@font-face 
  font-family:'Arca'
  src url('/fonts/Arca-Heavy.ttf')
  

.container-fluid
  &.content
    height auto
    padding  !important

nav
  background-color rgba(215,215,215,0.95) !important
  &.navbar
    @media screen and (min-width: 500px)
      min-height 50px !important
  &.mobile
    @media screen and (min-width: 500px)
      display none    
  &.desktop
    @media screen and (max-width: 500px)
      display none
  p.navbar-text    
    &.naver
      cursor pointer
      @media screen and (max-width: 800px)
        text-align right
        display inline-block
        font-size 10px
        width 20px
      margin-right 10px 
      margin-left 10px
      letter-spacing 2px
      font-family:'Raleway'
      -webkit-font-smoothing antialiased
      color rgba(115, 115, 115, 1)
    &.naver:hover
      color white !important
      text-decoration underline
  
ul
  &.dropdown-menu
    background-color rgba(215,215,215,0.95)
    color black
      
.dropdown-menu
  & li
    & a
      -webkit-font-smoothing antialiased
      color rgba(115, 115, 115, 1)
      font-family: 'Raleway'
      text-align center
    a:hover
      color black !important

  p  
    &.naver
      cursor pointer
      @media screen and (max-width: 800px)
        text-align right
        display inline-block
        font-size 10px
        width 20px
      margin-right 10px 
      margin-left 10px
      letter-spacing 2px
      font-family:'Raleway'
      color white !important
    

.row
  &.top
    margin-top 30px
    @media screen and (min-width: 1920px)
      margin 55px auto 0 auto
    @media screen and (max-width: 480px)
      margin 20px auto 0 auto
    &.about
      z-index 1999
  &.bottom
    margin 20px 0 30px 0
      
.row-fluid  
  &.naver
    margin-top 40px
    @media screen and (min-width: 1920px)
      margin 0 auto 0 auto
    @media screen and (max-width: 480px)
      margin 30px auto 0 auto
      
.col-xs-4
  &.right
    text-align right    
  &.center
    text-align center
    
.col-xs-12.col-sm-4
  &.imagewrapper
    @media screen and (min-width: 1920px)
      height 650px
    @media screen and (max-width: 480px)
      height 300px
      width 100%
    height 300px
    text-align center
    max-width 100%
    
.col-xs-12
  &.imagewrapper
    @media screen and (min-width: 1920px)
      height 650px
    @media screen and (max-width: 480px)
      height 300px
      width 100%
    height 300px
    text-align center
    max-width 100%
    &.video
      margin-bottom 80px !important
      @media screen and (max-width: 480px)
        display none
      
    
  
  
iframe
  max-width 100%
  text-align center !important
  @media screen and (max-width: 480px)
    height 315px
  

.col-xs-12
  &.content
    padding 0 !important
    
img
  max-width 100%
  &.hs
    max-width 80%
    margin 10% 2.5% 5% 2%
    @media screen and (min-width: 1920px)
      max-width 100%
      margin 12% 2.5% 5% 15%
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 50%
      margin 5% 2.5% 0 20%
     @media screen and (max-width: 480px)
      max-width 70%
      margin 12% 2.5% 20% 15%
  &.i
    max-width 100%
    cursor pointer
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 90%
      margin-top 30px
  &.naver
    height 30px
    cursor pointer
  &.icon
    height 50px !important
    padding 5px
    -webkit-font-smoothing antialiased
  &.iconM
    padding 2.5px
    height 45px
    -webkit-font-smoothing antialiased
  &.menu
    height 45px
    float right
    padding 5px 0 0 0
    cursor pointer
  &.content
    margin-bottom 20px
    padding 20px
    @media screen and (max-width: 480px)
      padding 1px
      width 98%
    
  


    
h3
  &.i
    text-align center
    font-family:'Raleway'
    font-weight bold
    margin 100px auto 5px auto    
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 100%
      margin 10px auto 5px auto
      font-size 8px
    @media screen and (max-width: 480px)
      font-size 14px
      margin 50px auto 5px auto
  &.content
    text-align left
    font-family:'Raleway'
    font-weight bold
    margin 20px auto 5px auto    
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 100%
      margin 10px auto 5px auto
      font-size 8px
    @media screen and (max-width: 480px)
      font-size 14px
      margin 20px auto 5px auto
    
h4
  -webkit-font-smoothing antialiased
  &.topper
    font-family:'Raleway'  
    @media screen and (max-height 480px) and (orientation: landscape)
      margin 10% auto 5% auto
      font-size 14px
    @media screen and (max-width: 480px)
      font-size 10px
  &.naver
    font-family:'Raleway'
    @media screen and (max-width: 480px)
      font-size 12px
      height 20px
      margin-top 5px
    
p
  -webkit-font-smoothing antialiased
  &.i
    text-align center
    height 30px
    margin-bottom 10px    
    @media screen and (max-width: 480px)
      font-size 12px
      height 40px
  &.content
    text-align left
    margin-bottom 30px
    height 150px    
    @media screen and (max-width: 480px)
      font-size 12px
      margin-bottom 10px
      height auto