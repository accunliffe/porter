@import url('http://fonts.googleapis.com/css?family=Raleway:400,800,700')
@import url('http://fonts.googleapis.com/css?family=Lato:400,700,900,400italic,700italic,900italic')
@font-face 
  font-family:'Arca'
  src url('/fonts/Arca-Heavy.ttf')

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important  

body
  padding 0 0 0 0 !important

//main containers


.container-fluid
  &.content
    height auto
    padding 0 0 0 0 !important


//navigation

nav  
  &.navbar
    background-color rgba(215,215,215,0.95)
    @media screen and (min-width: 480px)
      min-height 50px !important
  &.mobile
    @media screen and (min-width: 480px)
      display none
    @media screen and (max-height 480px) and (orientation: landscape)
      display block    
  &.desktop
    @media screen and (max-width: 480px)
      display none
    @media screen and (max-height 480px) and (orientation: landscape)
      display none
  p.navbar-text    
    &.naver
      cursor pointer
      @media screen and (max-width: 800px)
        text-align right
        display inline-block
        font-size 10px
        width 20px
      margin-right 10px 
      margin-left 10px
      letter-spacing 2px
      font-family:'Raleway'
      -webkit-font-smoothing antialiased
      color rgba(115, 115, 115, 1)
    &.naver:hover
      color black !important
      text-decoration underline
  
ul
  &.dropdown-menu
    background-color rgba(215,215,215,0.95)
    color black
      
.dropdown-menu
  & li
    & a
      -webkit-font-smoothing antialiased
      color rgba(115, 115, 115, 1)
      font-family: 'Raleway'
      text-align center
    a:hover
      color black !important

  p  
    &.naver
      cursor pointer
      @media screen and (max-width: 800px)
        text-align right
        display inline-block
        font-size 10px
        width 20px
      margin-right 10px 
      margin-left 10px
      letter-spacing 2px
      font-family:'Raleway'
      color white !important
    

//row classes

.row
  &.top
    padding 0 0 0 0 !important
    margin-top 30px
    width 100%
    @media screen and (min-width: 1920px)
      margin 55px auto 0 auto
    @media screen and (max-width: 480px)
      margin 20px auto 0 auto
    &.about
      z-index 1999
  &.bottom
    margin 20px 0 30px 0
      
.row-fluid  
  &.naver
    margin-top 40px
    @media screen and (min-width: 1920px)
      margin 0 auto 0 auto
    @media screen and (max-width: 480px)
      margin 60px auto 0 auto
  &.naverl
    margin-top 40px
    @media screen and (min-width: 1920px)
      margin 0 auto 0 auto
    @media screen and (max-width: 480px)
      margin 180px auto 0 auto

//column classes

.col-xs-4
  &.right
    text-align right    
  &.center
    text-align center
    
.col-xs-12.col-md-6
  &.imagewrapper
    @media screen and (min-width: 1920px)
      height 900px
    @media screen and (max-width: 480px)
      height auto
      width 100%
    height 500px
    text-align center
    max-width 100%
    margin-bottom 20px
  &.imagewrapperl
    @media screen and (min-width: 1920px)
      height 900px
    @media screen and (max-width: 480px)
      height auto
      width 100%
    height 500px
    text-align center
    max-width 100%
    margin-top 20px
    
.col-xs-12
  text-align center
  padding 0 0 0 0 !important
  &.imagewrapper
    @media screen and (min-width: 1920px)
      height 650px
    @media screen and (max-width: 480px)
      height 150px
      width 100%
    height auto
    text-align center
    max-width 100%
  &.content
    padding 0 0 0 0 !important
  &.fuller
    background-position 50% 50%
    background-repeat no-repeat
    background-attachment fixed
    background-size cover
    height 600px
    padding 0 0 0 0 !important
    @media screen and (max-width: 480px)
      height 300px
      background-attachment scroll
    @media screen and (min-width: 1920px)
      height 1000px    
    &.l    
      background-image linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('/images/lmm5.jpg')
      @media screen and (min-width: 1920px)
        background-image linear-gradient( rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4) ), url('/images/lmm5.jpg')
      @media screen and (max-width: 480px)
        background-image linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6) ), url('/images/lmm5.jpg')      
  &.middle
    background-color #EDEADD
  &.bottom
    background-color #EDEADD
    
.col-xs-6
  &.foot
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover
    height 400px
    padding 0 0 0 0 !important
    @media screen and (max-width: 480px)
      height 200px
      background-attachment scroll
    @media screen and (min-width: 1920px)
      height 800px
    &.footTrue
      background-image linear-gradient( rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7) ), url('/images/lendyiPhone.jpg')
      @media screen and (min-width: 1920px)
        background-image linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('/images/lendyiPhone.jpg')
    &.footRand
      background-image linear-gradient( rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7) ), url('/images/lendyiMac.jpg')
      @media screen and (min-width: 1920px)
        background-image linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('/images/lendyiMac.jpg')
      
    
      
       
  
  
//video


iframe
  max-width 100%
  text-align center !important
  @media screen and (max-width: 480px)
    height 315px
    
//images

img
  max-width 100%
  text-align center 
  &.topper
    text-align center
    margin-top -10%
    @media screen and (min-width: 1920px)
      margin-top -9%
    @media screen and (max-width: 480px)
      margin-bottom 20%
      margin-top 1%
  &.hs
    max-width 80%
    margin 10% 2.5% 5% 2%
    @media screen and (min-width: 1920px)
      max-width 100%
      margin 12% 2.5% 5% 15%
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 50%
      margin 5% 2.5% 0 20%
     @media screen and (max-width: 480px)
      max-width 70%
      margin 12% 2.5% 20% 15%
  &.middle
    max-width 90%
    margin 2.5% 0 5% 0
    @media screen and (min-width: 1920px)
      max-width 60%
      margin 2.5% 0 5% 0
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 50%
      margin 5% 0 0 0
     @media screen and (max-width: 480px)
      max-width 98%
      margin 12% 0 8% 0
  &.i
    max-width 100%
    cursor pointer
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 90%
      margin-top 30px
  &.naver
    height 30px
    cursor pointer
    @media screen and (max-width: 480px)
      margin-right 6px
  &.naver:hover
    background-color rgba(215,215,215,0.95) !important
  &.icon
    height 50px !important
    padding 5px
    -webkit-font-smoothing antialiased
  &.iconM
    padding 2.5px
    height 45px
    -webkit-font-smoothing antialiased
  &.menu
    height 45px
    float right
    padding 5px 0 0 0
    cursor pointer
  &.content
    margin-bottom 30px
    padding 10px
    max-height 100%
    @media screen and (min-width: 1920px)
      height 750px
    @media screen and (max-width: 480px)
      width auto
      height auto
    @media screen and (max-height 480px) and (orientation: landscape)
      max-width 60%
      margin 30px
  &.about
    margin-top 100px
    @media screen and (min-width: 1920px)
